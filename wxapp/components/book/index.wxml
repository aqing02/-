<!--components/book/index.wxml-->
<view class="container" bind:tap="showDetail">
    <image class="container-image" src="{{book.image}}"></image>
    <view style="background-color: white;" class="description">
        <view class="title" wx:if="book.title">{{book.title}}</view>
        <view class="author">{{book.author}}</view>
        <view class="foot">
        <text class="footer">{{book.fav_nums}}喜欢</text>
        </view>
    </view>
</view>