/* pages/book/index.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.header {
    position: fixed;
    background-color: #fff;
    height: 100rpx;
    width: 100%;
    border-top: 1rpx solid #f5f5f5;
    border-bottom: 1rpx solid #f5f5f5;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 3px 0 #e3e3e3;
    z-index: 99;
}

.box {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-radius: 30rpx;
    background-color: #f5f5f5;
    height: 68rpx;
    width: 700rpx;
    color: #999999
}

.box image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 20rpx;
    margin-bottom: -4rpx;
}

.img {
    width: 106rpx;
    height: 34rpx;
    margin-top: 40rpx;
}

.sub-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f5f5f5;
    margin-top: 100rpx;
}

.books-container {
    margin-top: 10rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 0 90rpx;
    font-size: 25rpx;
   
}

